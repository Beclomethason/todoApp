{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*",
        "use": "@vercel/react",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/build/$1"
      }
    ]
  }
  